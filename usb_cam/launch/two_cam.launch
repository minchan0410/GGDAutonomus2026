<launch>
  <arg name="image_view" default="false" />

  <group ns="cam1">
    <node name="usb_cam" pkg="usb_cam" type="usb_cam_node" output="screen">
      <rosparam command="load" file="$(find usb_cam)/config/usb_cam_0.yml"/>
    </node>
  </group>

  <group ns="cam2">
    <node name="usb_cam" pkg="usb_cam" type="usb_cam_node" output="screen">
      <rosparam command="load" file="$(find usb_cam)/config/usb_cam_2.yml"/>
    </node>
  </group>

  <node if="$(arg image_view)" name="image_view_cam1" pkg="image_view" type="image_view" output="screen">
    <remap from="image" to="/cam1/usb_cam/image_raw"/>
  </node>
  <node if="$(arg image_view)" name="image_view_cam2" pkg="image_view" type="image_view" output="screen">
    <remap from="image" to="/cam2/usb_cam/image_raw"/>
  </node>
</launch>